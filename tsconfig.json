{
  "compilerOptions": {
    "lib": ["DOM", "ES2016"],
    "target": "es6",
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strictFunctionTypes": false,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "allowJs": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "./lib",
    "rootDir": "./src"
  },
  "include": ["src"]
}
